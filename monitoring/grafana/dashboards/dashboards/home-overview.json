{
  "uid": "home-monitoring",
  "title": "Monitoring Home",
  "style": "dark",
  "tags": ["monitoring"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "editable": true,
  "refresh": "30s",
  "panels": [
    {
      "type": "row",
      "title": "Global Health",
      "id": 10,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false,
      "panels": []
    },
    {
      "id": 11,
      "title": "Overall CPU Usage",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 1 },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 70 },
              { "color": "red", "value": 85 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "100 - (avg(rate(node_cpu_seconds_total{mode=\"idle\", job=~\"$job\"}[$__rate_interval])) * 100)"
        }
      ]
    },
    {
      "id": 12,
      "title": "Overall Memory Usage",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 1 },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 75 },
              { "color": "red", "value": 90 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "(1 - (sum(node_memory_MemAvailable_bytes{job=~\"$job\"}) / sum(node_memory_MemTotal_bytes{job=~\"$job\"}))) * 100"
        }
      ]
    },
    {
      "id": 13,
      "title": "Overall Disk Usage",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 1 },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 75 },
              { "color": "red", "value": 90 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "(1 - (sum(node_filesystem_avail_bytes{mountpoint=\"/\", fstype!~\"rootfs|tmpfs\", job=~\"$job\"}) / sum(node_filesystem_size_bytes{mountpoint=\"/\", fstype!~\"rootfs|tmpfs\", job=~\"$job\"}))) * 100"
        }
      ]
    },
    {
      "id": 14,
      "title": "Active Nodes",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 1 },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "count(up{job=~\"$job\"} == 1)"
        }
      ]
    },
    {
      "type": "row",
      "title": "Hosts",
      "id": 20,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
      "collapsed": false,
      "panels": []
    },
    {
      "id": 21,
      "title": "Instances",
      "type": "table",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 6 },
      "fieldConfig": {
        "defaults": { "color": { "mode": "palette-classic" } },
        "overrides": []
      },
      "options": {
        "showHeader": true,
        "sortBy": [{ "displayName": "CPU %", "desc": true }]
      },
      "targets": [
        {
          "refId": "A",
          "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\", job=~\"$job\"}[$__rate_interval])) * 100)",
          "format": "table",
          "instant": true
        },
        {
          "refId": "B",
          "expr": "(1 - (node_memory_MemAvailable_bytes{job=~\"$job\"} / node_memory_MemTotal_bytes{job=~\"$job\"})) * 100",
          "format": "table",
          "instant": true
        },
        {
          "refId": "C",
          "expr": "(1 - (node_filesystem_avail_bytes{mountpoint=\"/\", fstype!~\"rootfs|tmpfs\", job=~\"$job\"} / node_filesystem_size_bytes{mountpoint=\"/\", fstype!~\"rootfs|tmpfs\", job=~\"$job\"})) * 100",
          "format": "table",
          "instant": true
        }
      ],
      "transformations": [
        { "id": "merge" },
        {
          "id": "organize",
          "options": {
            "renameByName": {
              "instance": "Instance",
              "Value": "CPU %",
              "Value 2": "Memory %",
              "Value 3": "Disk %"
            }
          }
        }
      ]
    },
    {
      "id": 22,
      "title": "Top Instances (CPU)",
      "type": "bargauge",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 6 },
      "fieldConfig": {
        "defaults": { "unit": "percent" },
        "overrides": []
      },
      "options": {
        "displayMode": "basic",
        "orientation": "horizontal",
        "showUnfilled": false,
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(5, 100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\", job=~\"$job\"}[$__rate_interval])) * 100))",
          "format": "time_series"
        }
      ]
    },
    {
      "type": "row",
      "title": "Trends",
      "id": 30,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 13 },
      "collapsed": false,
      "panels": []
    },
    {
      "id": 31,
      "title": "CPU Usage",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 14 },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\", job=~\"$job\", instance=~\"$instance\"}[$__rate_interval])) * 100)",
          "legendFormat": "{{instance}}"
        }
      ]
    },
    {
      "id": 32,
      "title": "Memory Usage",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 14 },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "(1 - (node_memory_MemAvailable_bytes{instance=~\"$instance\"} / node_memory_MemTotal_bytes{instance=~\"$instance\"})) * 100",
          "legendFormat": "{{instance}}"
        }
      ]
    },
    {
      "id": 33,
      "title": "Disk Usage (Root)",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 21 },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "(1 - (node_filesystem_avail_bytes{instance=~\"$instance\", mountpoint=\"/\", fstype!~\"rootfs|tmpfs\"} / node_filesystem_size_bytes{instance=~\"$instance\", mountpoint=\"/\", fstype!~\"rootfs|tmpfs\"})) * 100",
          "legendFormat": "{{instance}}"
        }
      ]
    },
    {
      "id": 34,
      "title": "Network Traffic",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 21 },
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (instance) (rate(node_network_receive_bytes_total{instance=~\"$instance\", device!~\"lo|docker.*\"}[$__rate_interval]))",
          "legendFormat": "{{instance}} RX"
        },
        {
          "refId": "B",
          "expr": "sum by (instance) (rate(node_network_transmit_bytes_total{instance=~\"$instance\", device!~\"lo|docker.*\"}[$__rate_interval]))",
          "legendFormat": "{{instance}} TX"
        }
      ]
    },
    {
      "type": "row",
      "title": "Logs",
      "id": 40,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 28 },
      "collapsed": false,
      "panels": []
    },
    {
      "id": 41,
      "title": "Live Container Logs",
      "type": "logs",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 29 },
      "options": {
        "dedupStrategy": "none",
        "showTime": true,
        "sortOrder": "Descending",
        "wrapLogMessage": true,
        "liveStreaming": true
      },
      "targets": [
        {
          "refId": "A",
          "expr": "{job=~\"$job\", container=~\"$container\"}",
          "queryType": "range"
        }
      ]
    }
  ],
  "templating": {
    "list": [
      {
        "name": "job",
        "label": "Job",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "query": "label_values(node_exporter_build_info, job)",
        "includeAll": true,
        "multi": true,
        "refresh": 1,
        "current": { "selected": false, "text": "All", "value": "$__all" }
      },
      {
        "name": "instance",
        "label": "Instance",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "query": "label_values(node_exporter_build_info{job=~\"$job\"}, instance)",
        "includeAll": true,
        "multi": true,
        "refresh": 1,
        "current": { "selected": false, "text": "All", "value": "$__all" }
      },
      {
        "name": "container",
        "label": "Container",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki" },
        "query": "label_values({job=~\"$job\"}, container)",
        "includeAll": true,
        "multi": true,
        "refresh": 1,
        "current": { "selected": false, "text": "All", "value": "$__all" }
      }
    ]
  },
  "time": { "from": "now-1h", "to": "now" },
  "timepicker": {
    "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h"]
  },
  "links": []
}
