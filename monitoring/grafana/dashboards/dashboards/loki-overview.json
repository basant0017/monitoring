{
  "uid": "loki-overview",
  "title": "Loki Overview",
  "tags": ["monitoring", "logs"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "editable": true,
  "refresh": "30s",
  "style": "dark",
  "fiscalYearStartMonth": 1,
  "weekStart": "",
  "liveNow": false,
  "panels": [
    {
      "id": 1,
      "title": "Log Lines / min",
      "type": "stat",
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "unit": "logsmin",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 100 },
              { "color": "red", "value": 500 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate({job=~\"$job\", container=~\"$container\"}[$__rate_interval]))",
          "queryType": "range"
        }
      ]
    },
    {
      "id": 2,
      "title": "Error Lines / min",
      "type": "stat",
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "unit": "logsmin",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 10 },
              { "color": "red", "value": 50 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate({job=~\"$job\", container=~\"$container\"} |~ \"(?i)error\" [$__rate_interval]))",
          "queryType": "range"
        }
      ]
    },
    {
      "id": 3,
      "title": "Warning Lines / min",
      "type": "stat",
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "unit": "logsmin",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 20 },
              { "color": "red", "value": 100 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate({job=~\"$job\", container=~\"$container\"} |~ \"(?i)warn\" [$__rate_interval]))",
          "queryType": "range"
        }
      ]
    },
    {
      "id": 4,
      "title": "Error Percentage",
      "type": "gauge",
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "decimals": 2,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "percentage",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 0.05 },
              { "color": "red", "value": 0.1 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate({job=~\"$job\", container=~\"$container\"} |~ \"(?i)error\" [$__rate_interval])) / sum(rate({job=~\"$job\", container=~\"$container\"}[$__rate_interval]))",
          "queryType": "range"
        }
      ]
    },
    {
      "id": 5,
      "title": "Log Volume by Container",
      "type": "bargauge",
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "fieldConfig": {
        "defaults": { "unit": "logsmin" },
        "overrides": []
      },
      "options": {
        "orientation": "horizontal",
        "displayMode": "gradient",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (container) (rate({job=~\"$job\", container=~\"$container\"}[$__rate_interval]))",
          "queryType": "range"
        }
      ]
    },
    {
      "id": 6,
