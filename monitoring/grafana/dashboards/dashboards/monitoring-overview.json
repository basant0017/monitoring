        },
        {
          "refId": "B",
          "expr": "avg by (instance) (node_load5{instance=~\"$instance\"})",
          "legendFormat": "{{instance}} (5m)"
        },
        {
          "refId": "C",
          "expr": "avg by (instance) (node_load15{instance=~\"$instance\"})",
          "legendFormat": "{{instance}} (15m)"
        }
      ]
    },
    {
      "id": 307,
      "title": "Filesystem Table",
      "type": "table",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 45 },
      "fieldConfig": { "defaults": { "unit": "percent" }, "overrides": [] },
      "options": {
        "showHeader": true,
        "sortBy": [{ "displayName": "Usage %", "desc": true }]
      },
      "targets": [
        {
          "refId": "A",
          "expr": "(1 - (node_filesystem_avail_bytes{instance=~\"$instance\", fstype!~\"rootfs|tmpfs\"} / node_filesystem_size_bytes{instance=~\"$instance\", fstype!~\"rootfs|tmpfs\"})) * 100",
          "format": "table",
          "instant": true
        }
      ],
      "transformations": [
        { "id": "labelsToFields", "options": { "mode": "columns" } },
        { "id": "organize", "options": { "excludeByName": { "Value": false } } }
      ]
    },
    {
      "id": 308,
      "title": "Node Metadata",
      "type": "table",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 45 },
      "fieldConfig": { "defaults": { "unit": "short" }, "overrides": [] },
      "options": {
        "showHeader": true,
        "sortBy": [{ "displayName": "Value", "desc": false }]
      },
      "targets": [
        {
          "refId": "A",
          "expr": "node_exporter_build_info{instance=~\"$instance\"}",
          "format": "table",
          "instant": true
        }
      ],
      "transformations": [
        { "id": "labelsToFields", "options": { "mode": "columns" } },
        {
          "id": "organize",
          "options": {
            "renameByName": {
              "Value": "Value",
              "instance": "Instance",
              "job": "Job",
              "version": "Version"
            }
          }
        }
      ]
    },
    {
      "type": "row",
      "title": "Logs",
      "id": 400,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 54 },
      "collapsed": false,
      "panels": []
    },
    {
      "id": 401,
      "title": "Container Logs",
      "type": "logs",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 55 },
      "options": {
        "dedupStrategy": "none",
        "showTime": true,
        "sortOrder": "Descending",
        "wrapLogMessage": true,
        "liveStreaming": false
      },
      "targets": [
        {
          "refId": "A",
          "expr": "{job=~\"$job\", container=~\"$container\"}",
          "queryType": "range"
        }
      ]
    }
  ],
  "templating": {
    "list": [
      {
        "name": "job",
        "label": "Job",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "query": "label_values(node_exporter_build_info, job)",
        "includeAll": true,
        "multi": true,
        "refresh": 1,
        "current": { "selected": false, "text": "node-exporter", "value": "node-exporter" }
      },
      {
        "name": "instance",
