    {
      "id": 206,
      "title": "Instance Network In",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 13 },
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "decimals": 1,
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center",
        "orientation": "horizontal",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(node_network_receive_bytes_total{instance=~\"$instance\", device!~\"lo|docker.*\"}[$__rate_interval]))"
        }
      ]
    },
    {
      "id": 207,
      "title": "Instance Network Out",
      "type": "stat",
