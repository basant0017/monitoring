        "defaults": {
          "unit": "s",
          "decimals": 0,
          "mappings": [],
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 86400 },
              { "color": "red", "value": 3600 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "orientation": "horizontal",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "time() - max(node_boot_time_seconds{instance=~\"$instance\"})"
        }
      ]
    },
    {
      "id": 209,
